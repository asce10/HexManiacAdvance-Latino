<Border x:Class="HavenSoft.HexManiac.WPF.Controls.TextBoxLookAlike"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   Background="{DynamicResource Backlight}"
   BorderThickness="1,1,1,1"
   SnapsToDevicePixels="True"
   BorderBrush="{StaticResource TopToBottomBrush}">
   <TextBlock Name="TextBlock" Margin="2,0,0,0" Text="{Binding Content}"/>
</Border>
